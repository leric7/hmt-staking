{
  "name": "hmt-staking",
  "scripts": {
    "run-env": "yarn && tail -f /dev/null",
    "hardhat": "hardhat",
    "hardhat:node": "hardhat node",
    "hardhat:localhost": "hardhat --network localhost",
    "hardhat:develop": "hardhat --network develop",
    "size": "npm run compile && npm run hardhat size-contracts",
    "compile": "SKIP_LOAD=true hardhat compile",
    "test": "npm run compile && TS_NODE_TRANSPILE_ONLY=1 hardhat test ./test/*.spec.ts",
    "test:localhost": "npm run compile && TS_NODE_TRANSPILE_ONLY=1 npm run hardhat:localhost test ./test/*.spec.ts",
    "ci:test": "npm run compile && npm run test",
    "ci:clean": "hardhat clean && rm -rf ./artifacts ./cache ./types",
    "hmt-staking:localhost:full:migration": "npm run compile && npm run hardhat:localhost -- hmt-staking:mainnet",
    "hmt-staking:develop:full:migration": "npm run compile && npm run hardhat:develop -- hmt-staking:mainnet",
    "prepublishOnly": "npm run compile",
    "dev:api": "nodemon --watch ./server ./server/index.ts"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.3",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.1.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@typechain/hardhat": "^6.1.3",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.0.3",
    "@types/lowdb": "1.0.9",
    "@types/winston": "^2.4.4",
    "chai": "^4.3.6",
    "hardhat": "^2.11.2",
    "hardhat-gas-reporter": "^1.0.9",
    "lowdb": "1.0.0",
    "nodemon": "^2.0.20",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@ethersproject/providers": "^5.7.1",
    "@openzeppelin/contracts": "^3.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.2",
    "ethers": "^5.7.1",
    "express": "^4.18.1",
    "helmet": "^6.0.0",
    "morgan": "^1.10.0"
  }
}
